<%= form_with(model: patient, local: true, class: "form-horizontal") do |form| %>
  <% if patient.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h4>
      <ul>
        <% patient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %></br>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :age, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.number_field :age, class: "form-control" %></br>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :gender, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :gender, ['Male', 'Female', 'Other'], {}, class: "form-control" %></br>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :address, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_area :address, class: "form-control" %></br>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :phone_number, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :phone_number, class: "form-control" %></br>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-50 offset-sm-5">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
